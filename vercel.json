{
    "version": 2,
    "builds": [
        {
            "src": "api/**/*.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "^/$",
            "dest": "/api/index.js"
        },
        {
            "src": "^/home$",
            "dest": "/api/home.js"
        },
        {
            "src": "^/search$",
            "dest": "/api/search.js"
        },
        {
            "src": "^/details$",
            "dest": "/api/details.js"
        },
        {
            "src": "^/stream$",
            "dest": "/api/stream.js"
        },
        {
            "src": "^/api/(.*)$",
            "dest": "/api/$1.js"
        }
    ]
}